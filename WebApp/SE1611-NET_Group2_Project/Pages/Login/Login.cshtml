@page
@model SE1611_NET_Group2_Project.Pages.Login.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login page";
}
<link href="~/css/login.css" rel="stylesheet">
@{
    if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram</title>
    <!-- FAVIVON -->
    <link rel="shortcut icon" href="./images/favicon.png" type="image/png">
    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- APP CSS -->
    <link rel="stylesheet" href="./css/login.css">
</head>

<div class="container">
    <div class="main-container">
        <div class="main-content">
            <div class="slide-container" style="background-image: url(..\Images\images\phone-frame.png);">
                <div class="slide-content" id="slide-content">
                    <img src="..\Images\images\slide (1).jpg" alt="slide image" class="active">
                    <img src="..\Images\images\slide (2).jpg" alt="slide image">
                    <img src="..\Images\images\slide (3).jpg" alt="slide image">
                    <img src="..\Images\images\slide (4).jpg" alt="slide image">
                    <img src="..\Images\images\slide (5).jpg" alt="slide image">
                </div>
            </div>
            <div class="form-container">
                <div class="form-content box">
                    <div class="logo">
                        <img src="..\Images\images\logo-light.png" alt="Instagram logo" class="logo-light">
                        <img src="..\Images\images\logo-dark.png" alt="Instagram logo" class="logo-dark">
                    </div>
                    <form method="post" asp-page="Login">
                        <div class="signin-form" id="signin-form">
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Phone number, username or email
                                    </span>
                                    <input type="text" class="input-1" asp-for="@Model.Username" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Password
                                    </span>
                                    <input type="password" class="input-2" asp-for="@Model.Password" required>
                                    <button>Show</button>
                                </div>
                            </div>
                            <div class="btn-group">
                                <button class="btn-login" id="signin-btn" type="submit" >
                                    Log In
                                </button>
                            </div>
                    </form>
                </div>
            </div>
            <div class="box goto">
                <p>
                    Don't have an account?
                    <a href="/Register/Register">Register</a>
                </p>
            </div>

        </div>
    </div>
</div>
<div class="footer">
    <div class="links">
        <a href="#">About</a>
        <a href="#">Blog</a>
        <a href="#">Jobs</a>
        <a href="#">Help</a>
        <a href="#">API</a>
        <a href="#">Privacy</a>
        <a href="#">Terms</a>
        <a href="#">Top Accounts</a>
        <a href="#">Hashtags</a>
        <a href="#">Locations</a>
        <a href="#" id="darkmode-toggle">Darkmode</a>
    </div>
    <div class="copyright">
        © 2023 Instagram from SE1611 - Group 2
    </div>
</div>
    </div>

<!-- APP JS -->
<script src="~/js/app.js"></script>
