@page
@model SE1611_NET_Group2_Project.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>User manager</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].IsPrivate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].DeleteFlag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Person != null)
        {
            @foreach (var item in Model.Person)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrivate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeleteFlag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Photo.PhotoId)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.UserId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }

        }
        <!-- Display the pagination links -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.PageIndex != 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Users/Index?pageIndex=@(Model.PageIndex - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="/Users/Index?pageIndex=@i">@i</a>
                    </li>
                }
                @if (Model.PageIndex != Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Users/Index?pageIndex=@(Model.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </tbody>
</table>
