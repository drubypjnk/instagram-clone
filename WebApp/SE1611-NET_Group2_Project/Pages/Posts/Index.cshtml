@page
@model SE1611_NET_Group2_Project.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Post manager</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].VisibilityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].DeleteFlag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].AuthorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Post != null)
            {
            @foreach (var item in Model.Post)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VisibilityId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeleteFlag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorNavigation.UserId)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PostId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.PostId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.PostId">Delete</a>
                    </td>
                </tr>
            }

        }
         <!-- Display the pagination links -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
                @if (Model.PageIndex != 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Posts/Index?pageIndex=@(Model.PageIndex - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="/Posts/Index?pageIndex=@i">@i</a>
                    </li>
                }
                @if (Model.PageIndex != Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Posts/Index?pageIndex=@(Model.PageIndex + 1)">Next</a>
                    </li>
                }
        </ul>
    </nav>
    </tbody>
</table>
