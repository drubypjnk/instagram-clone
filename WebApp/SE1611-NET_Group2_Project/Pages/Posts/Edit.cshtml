@page
@model SE1611_NET_Group2_Project.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostId" />
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <input asp-for="Post.Content" class="form-control" />
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CreatedDate" class="control-label"></label>
                <input asp-for="Post.CreatedDate" class="form-control" />
                <span asp-validation-for="Post.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Author" class="control-label"></label>
                <select asp-for="Post.Author" class="form-control" asp-items="ViewBag.Author"></select>
                <span asp-validation-for="Post.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.VisibilityId" class="control-label"></label>
                <input asp-for="Post.VisibilityId" class="form-control" />
                <span asp-validation-for="Post.VisibilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.UpdateDate" class="control-label"></label>
                <input asp-for="Post.UpdateDate" class="form-control" />
                <span asp-validation-for="Post.UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.DeleteFlag" class="control-label"></label>
                <input asp-for="Post.DeleteFlag" class="form-control" />
                <span asp-validation-for="Post.DeleteFlag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
