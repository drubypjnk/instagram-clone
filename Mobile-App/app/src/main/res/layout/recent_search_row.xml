<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/hover_background"
                                                   android:id="@+id/cl_recent_search">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/baseline_search_24"
            android:id="@+id/imv_recent_search"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_recent_search"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/imv_recent_search"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp" android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>