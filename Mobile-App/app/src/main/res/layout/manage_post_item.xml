<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView

        android:id="@+id/imv_post_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/tv_author_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:width="200dp"
        android:maxLines="2"
        android:text="Author"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imv_post_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:width="200dp"
        android:maxLines="2"
        android:text="Title of post"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imv_post_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_post_status"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:width="200dp"
        android:maxLines="2"
        android:text="Status of post"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imv_post_item"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_action"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title_item"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/blue" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:text="Status:"
        app:layout_constraintStart_toEndOf="@+id/imv_post_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_item" />
</androidx.constraintlayout.widget.ConstraintLayout>